<div class="panel panel-default">
  <div class="panel-heading">Listing occurrences</div>
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Data</th>
            <th>NF-e</th>
            <th>Motivo</th>
            <th colspan="3">Op√µes</th>
          </tr>
        </thead>

        <tbody>
          <% @occurrences.each do |occurrence| %>
            <tr>
              <td><%= date_br occurrence.date_occurrence %></td>
              <td><%= occurrence.number_nfe %></td>
              <td><%= occurrence.motive_id %></td>
              <td><%= link_to 'Show', occurrence, class: "btn btn-info btn-xs" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>    
  </div>
</div>

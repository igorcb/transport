<%= form_for(@insurer) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label :cnpj %><br>
    <%= f.text_field :cnpj, class: "form-control cnpj" %>
  </div>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Salvar", class: "btn btn-blue" %>
    <%= link_to "Exibir", insurer_path(@insurer), class: "btn btn-info" if !@insurer.new_record? %>
    <%= link_to "Listar Todos", insurers_path, class: "btn btn-default" %>
  </div>
<% end %>

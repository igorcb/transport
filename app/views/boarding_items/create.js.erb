<% if @result[:success] == false -%>
  $("#messages").hide(300);
  $("#messages").empty("");
  $("#messages").append("<div class='alert alert-danger'><%= @result[:message] %></div>");
  $("#messages").show(300);
<% else -%>
  $("#messages").hide(300);
  $("#messages").empty("");
  $("#messages").append("<div class='alert alert-success'><%= @result[:message] %></div>");
  $("#messages").show(300);
  $(":input:not(input[type=submit])").val("");
  $("#boardings_items_list").html("<%= j( render "boarding_item", boarding_items: @boarding_items ) %>");
<% end -%>

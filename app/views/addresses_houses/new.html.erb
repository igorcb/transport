<div class="container-fluid">
  <h1>Generator</h1>
  <%= form_tag("/addresses_houses/generator") do %>
    <div class="row">
      <div class="form_group col-md-6">
        <%= label_tag :warehouse %>
        <%= select_tag "warehouse", options_from_collection_for_select(Warehouse.all, "id", "name"),  {include_blank: "Escolha seu armazém", class: "form-control", id: "warehouse-select"} %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-md-6">
        <%= label_tag "Galpão" %>
        <%= select_tag "address[deposit_id]", [],  {disabled: true, class: "form-control", id: "deposit-select"} %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-md-2">
        <%= label_tag "Inicio da rua" %>
        <%= number_field_tag "address[initStreet]", "", {class: "form-control"} %>
      </div>
      <div class="form-group col-md-2">
        <%= label_tag "Fim da rua" %>
        <%= number_field_tag "address[endStreet]", "", {class: "form-control"} %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-md-3">
        <%= label_tag "Nº max de andares" %>
        <%= number_field_tag "address[maxFloor]", "", {class: "form-control"} %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-md-3">
        <%= label_tag "Nº max de casas" %>
        <%= number_field_tag "address[maxHouse]", "", {class: "form-control"} %>
      </div>
    </div>
    <div class="actions">
      <%= submit_tag "Gerar", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

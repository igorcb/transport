<% boardings.each do |boarding| %>
  <li class="<%= boarding.status_name.downcase %>">
  <!-- <span class="badge"><%= boarding.qtde_palets %></span> -->
  <%= render 'info_default', boarding: boarding %>
  <%#= render 'static_pages/sup_boarding', boarding: boarding %>

  <p><strong>No Lacre Um: </strong><span><%= boarding.sealing %></span></p>
  <p><strong>No Lacre Dois: </strong><span><%= boarding.sealing_two %></span></p>
  <p><strong>No Lacre Tres: </strong><span><%= boarding.sealing_three %></span></p>

  <% if boarding.boarding_vehicles.present? %>
    <p><strong>Ve√≠culos: </strong>
      <span>
      <% boarding.boarding_vehicles.each do |item| %>
        [
        <% if VehicleRestriction.vehicle_loking?(item.vehicle.id) %>
          <%= item.vehicle.placa %>
        <% else %>
          <%= link_to item.vehicle.placa, new_vehicle_vehicle_restriction_path(item.vehicle.id) %>
        <% end %>
        ]
      <% end %>
      </span>
    </p>
  <% end %>


  <%= link_to "Informar Equipe", report_team_boarding_path(boarding), {class: "btn btn-info btn-sm"} if boarding.status == Boarding::TipoStatus::ABERTO %>

</li>
<% end %>

<%#= render 'offer_drivers/fields', f: f %>
<div class='nested-fields'>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <div class="row">
    <div class="col-xs-2">
      <%= f.text_field :date_incoming, class: "form-control input-sm data", placeholder: "Data"   %>
    </div>

    <div class="col-xs-2">
      <%= f.text_field :time_incoming, class: "form-control input-sm time", placeholder: "Hora"   %>
    </div>

    <div class="col-xs-4">
      <%= f.text_field :driver, class: "form-control input-sm", placeholder: "Motorista"   %>
    </div>

  </div>

  <div class="row">
    <div class="col-xs-2">
      <%= f.text_field :type_vehicle, size: 5, class: "form-control input-sm", placeholder: "Tipo Veiculos" %>
    </div>
    <div class="col-xs-2">
      <%= f.text_field :place_horse, size: 5, class: "form-control input-sm placa", placeholder: "Placa" %>
    </div>

    <div class="col-xs-2">
      <%= f.text_field :place_cart_first, size: 5, class: "form-control input-sm placa", placeholder: "Placa" %>
    </div>

    <div class="col-xs-2">
      <%= f.text_field :place_cart_second, class: "form-control input-sm placa", placeholder: "Placa"   %>
    </div>
    
    <%= link_to_remove_association "[-] Apagar", f, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
  </div>

  

  
</div>
<div class="panel panel-default">
  <div class="panel-heading">Listagem Interna de Controle de Pallets </div>
  <div class="panel-body">
    <!-- <strong> Saldo: <%#= ControlPallet.saldo %> </strong> -->
    <%= link_to 'New Control Pallet Internal', new_control_pallet_internal_path, class: "btn btn-primary btn-lg btn-block" %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Tipo</th>
            <th>Nome</th>
            <th>Equipamento</th>
            <th>Ent/Sai</th>
            <th>Data</th>
            <th>Qtde</th>
            <th>Historico</th>
            <th colspan="3">Opções</th>
          </tr>
        </thead>
 
        <tbody>
          <% @control_pallet_internals.each do |control_pallet_internal| %>
            <tr>
              <td><%= control_pallet_internal.type_account_name %></td>
              <td><%= control_pallet_internal.responsable.nome %></td>
              <td><%= control_pallet_internal.equipament_name %></td>
              <td><%= control_pallet_internal.credito_debito %></td>
              <td><%= date_br(control_pallet_internal.date_launche) %></td>
              <td><%= control_pallet_internal.qtde %></td>
              <td><%= control_pallet_internal.historic %></td>
              <td><%= link_to 'Show', control_pallet_internal, class: "btn btn-info btn-xs" %></td>
              <td><%= link_to 'Edit', edit_control_pallet_internal_path(control_pallet_internal), class: "btn btn-primary btn-xs" %></td>
              <td><%#= link_to 'Print', print_control_pallet_path(control_pallet_internal, format: 'pdf'), class: "btn btn-default btn-xs" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>    
  </div>
</div>


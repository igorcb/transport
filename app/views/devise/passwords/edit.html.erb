<main class="content-login">
  <div class="info col">
    <%= image_tag("logo_yohan.png", alt: "Yohan WMS") %>
    <h1>Sistema WMS</h1>
  </div>
  <div class="login col">
    <h2>Altere sua senha</h2>
    <div class="error"><%= devise_error_messages! %></div>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>
      <div class="form-item">
        <%= f.password_field :password, placeholder: "Nova senha", autofocus: true, autocomplete: "off" %>
      </div>

      <div class="form-item">
        <%= f.password_field :password_confirmation, placeholder: "Repita nova senha", autocomplete: "off" %>
      </div>

      <br>
      <div class="form-group">
        <%= link_to "Cancelar", new_session_path(resource_name), class: "btn btn-default" if controller_name != 'sessions' %>
        <%= f.submit "Alterar senha", class: "submit" %>
      </div>

    <% end %>
  </div>
</main>

<%#= render "devise/shared/links" %>

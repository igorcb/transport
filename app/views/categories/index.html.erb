<div class="panel panel-default">
  <div class="panel-heading">Listagem de Categorias</div>
  <div class="panel-body">
    <%= link_to 'Nova Categoria', new_category_path, class: "btn btn-primary btn-lg btn-block" %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Descrição</th>
            <th colspan="3">Opções</th>
          </tr>
        </thead>

        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.descricao %></td>

              <td><%= link_to 'Show', category, class: "btn btn-info btn-sm" %></td>
              <td><%= link_to 'Edit', edit_category_path(category), class: "btn btn-primary btn-sm" %></td>
              <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>    
  </div>
</div>


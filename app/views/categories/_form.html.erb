<%= form_for(@category) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label :descricao %>
    <%= f.text_field :descricao, class: "form-control"  %>
  </div>
  
  <div class="form-group">
    <%= f.submit "Salvar", class: "btn btn-primary" %>
    <%= link_to "Exibir",  categories_path(@category), class: "btn btn-info" if !@category.new_record? %>
    <%= link_to "Listar Todos", categories_path, class: "btn btn-default" %>
  </div>

<% end %>

<div class="panel panel-default">
  <div class="panel-heading">Listagem de Promotor</div>
  <div class="panel-body">
    <%= link_to 'New Segment', new_segment_path, class: "btn btn-blue btn-lg btn-block" %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th colspan="3">Opções</th>
          </tr>
        </thead>

        <tbody>
          <% @segments.each do |segment| %>
            <tr>
              <td><%= segment.name %></td>
              <td><%= link_to 'Show', segment, class: "btn btn-info btn-sm" %></td>
              <td><%= link_to 'Edit', edit_segment_path(segment), class: "btn btn-blue btn-sm" %></td>
              <td><%= link_to 'Destroy', segment, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>    
  </div>
</div>
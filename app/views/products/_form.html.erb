<%= form_for(@product) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label :descricao %><br>
    <%= f.text_field :descricao, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :category_id, "Categoria" %>
    <%= f.collection_select :category_id, Category.order('descricao'), :id, :descricao, {include_blank: "Selecione a Categoria"}, {class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :cubagem %><br>
    <%= f.text_field :cubagem, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= f.submit "Salvar", class: "btn btn-primary" %>
    <%= link_to "Exibir",  product_path(@product), class: "btn btn-info" if !@product.new_record? %>
    <%= link_to "Listar Todos", products_path, class: "btn btn-default" %>
  </div>

<% end %>

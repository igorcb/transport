<div class="panel panel-default">
  <div class="panel-heading">Listagem de Produtos</div>
  <div class="panel-body">
    <%= link_to 'Novo Produto', new_product_path, class: "btn btn-primary btn-lg btn-block" %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Descricao</th>
            <th>Categoria</th>
            <th>Cubagem</th>
            <th colspan="3">Opções</th>
         </tr>
        </thead>

        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= product.descricao %></td>
              <td><%= product.category.descricao if product.category.present? %></td>
              <td><%= product.cubagem.to_f %></td>
              <td><%= link_to 'Show', product, class: "btn btn-info btn-sm" %></td>
              <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-primary btn-sm" %></td>
              <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>    
  </div>
</div>

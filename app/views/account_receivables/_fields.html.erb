	<%= hidden_field_tag "account_receivable[ordem_service_id]", @ordem_service.id if !@ordem_service.nil? %>

  <div class="form-group">
    <%= f.label :data_vencimento %><br>
    <% if @account_receivable.new_record? %>
      <%= f.text_field :data_vencimento, class: "form-control data" %>
    <% else %>
      <%= f.text_field :data_vencimento, class: "form-control data", value: date_br(@account_receivable.data_vencimento) %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :valor %>
		<%= f.text_field :valor, value: number_to_currency(@account_receivable.valor, unit: "", separator: ",", delimiter: "."),  class: "form-control money2" %>
  </div>

  <div class="form-group">
    <%= f.label :observacao %>
    <%= f.text_area :observacao, class: "form-control" %>
  </div>

<p>
  <strong>Tipo Cliente:</strong>
  <%= @account_receivable.type_account_name %>
</p>

<p>
  <strong>Cliente:</strong>
  <%= link_to @account_receivable.client.nome, @account_receivable.client %> 
</p>

<p>
  <strong>Centro de Custo:</strong>
  <%= @account_receivable.cost_center.descricao %>
</p>

<p>
  <strong>Sub Centro de Custo:</strong>
  <%= @account_receivable.sub_cost_center.descricao %>
</p>

<p>
  <strong>Sub Centro de Custo Nivel 3:</strong>
  <%= @account_receivable.sub_cost_center_three.descricao if @account_receivable.sub_cost_center_three.present? %>
</p>

<p>
  <strong>Forma de Pagamento:</strong>
  <%= @account_receivable.payment_method.descricao if @account_receivable.payment_method.present? %>
</p>

<p>
  <strong>Historico:</strong>
  <%= @account_receivable.historic.descricao %>
</p>

<p>
  <strong>Data vencimento:</strong>
  <%= date_br(@account_receivable.data_vencimento) %>
</p>

<p>
  <strong>Documento:</strong>
  <%= @account_receivable.documento %>
</p>

<p>
  <strong>Valor:</strong>
  <%= number_to_currency(@account_receivable.valor, unit: "R$ ", separator: ",", delimiter: ".")  %>
</p>

<p>
  <strong>Saldo:</strong>
  <%= number_to_currency(@account_receivable.saldo, unit: "R$ ", separator: ",", delimiter: ".")  %>
</p>

<p>
  <strong>Total Pago:</strong>
  <%= number_to_currency(@account_receivable.total_pago, unit: "R$ ", separator: ",", delimiter: ".")  %>
</p>

<p>
  <strong>Situação do Pago:</strong>
  <%= @account_receivable.status_name %>
</p>

<p>
  <strong>Remessa de Entrada:</strong>
  <%= link_to @account_receivable.input_control_id, @account_receivable.input_control if @account_receivable.input_control.present?  %>
</p>

<% if @account_receivable.ordem_service.present? %>  
  <p>
    <strong>Ordem de Serviço:</strong> 
    <%= link_to "#{ @account_receivable.ordem_service.id }", @account_receivable.ordem_service %> 
  </p>
  <p>
    <strong>Status da OS:</strong>
    <%= @account_receivable.ordem_service.status_name %>
  </p>
<% else %>
  <p>
    <strong>Ordem de Serviço:</strong> 
  </p>
<% end %>

<p>
  <strong>Observacao:</strong>
  <pre><%= @account_receivable.observacao %></pre>
</p>

<p>
  <strong>Status:</strong>
  <%= @account_receivable.status_name %>
</p>


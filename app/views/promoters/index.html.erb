<div class="panel panel-default">
  <div class="panel-heading">Listagem de Promotor</div>
  <div class="panel-body">
    <%= link_to 'Novo Promotor', new_promoter_path, class: "btn btn-primary btn-lg btn-block" %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Cpf cnpj</th>
            <th>Nome</th>
            <th>Fantasia</th>
            <th colspan="3">Opções</th>
          </tr>
        </thead>

        <tbody>
          <% @promoters.each do |promoter| %>
            <tr>
              <td><%= promoter.cpf %></td>
              <td><%= promoter.nome %></td>
              <td><%= promoter.fantasia %></td>
              <td><%= link_to 'Show', promoter, class: "btn btn-info btn-sm" %></td>
              <td><%= link_to 'Edit', edit_promoter_path(promoter), class: "btn btn-primary btn-sm" %></td>
              <td><%= link_to 'Destroy', promoter, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>    
  </div>
</div>
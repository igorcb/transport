<div class="panel panel-default">
  <div class="panel-heading">Listing Input Controls</div>
  <div class="panel-body">
    <%= link_to 'New Input Control', new_input_control_path, class: "btn btn-blue btn-lg btn-block" %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <%= render 'header' %>
         </tr>
        </thead>

        <tbody>
          <% @input_controls.each do |input_control| %>
            <tr>
              <%= render input_control %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>    
  </div>
</div>
<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">

  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingEleven">
      <h4 class="panel-title">
        <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseEleven" aria-expanded="false" aria-controls="collapseEleven">
          Pesquisar
        </a>
      </h4>
    </div>
    <div id="collapseEleven" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingEleven">
      <div class="panel-body">

      <%#= render "form_search" %>

    </div>
  </div>

</div>

<div class="panel panel-default">
  <div class="panel-heading">Tabela de Frete MÃ­nimo</div>
  <div class="panel-body">

    <%= link_to 'New Table freight', new_table_freight_path, class: "btn btn-blue btn-sm btn-block" %>
    <div class="table-responsive">
      
        <div id="result_tasks">

        <table class="table table-striped">
          <thead>
            <%#= render 'header' %>
            <th>Type charge</th>
            <th>Km from</th>
            <th>Km to</th>
            <th>Price</th>
            <th colspan="3">Options</th>
          </thead>

          <tbody>
            <%#= render @tasks %>
            <% @table_freights.each do |table_freight| %>
              <tr>
                <td><%= table_freight.type_charge_name %></td>
                <td><%= table_freight.km_from %></td>
                <td><%= table_freight.km_to %></td>
                <td><%= table_freight.price %></td>
                <td><%= link_to 'Show', table_freight, class: "btn btn-info btn-xs" %></td>
                <td><%= link_to 'Edit', edit_table_freight_path(table_freight), class: "btn btn-blue btn-xs" %></td>
                <td><%= link_to 'Destroy', table_freight, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
              </tr>
            <% end %>

          </tbody>

        </table>
      </div>

    </div>    
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('.has_tooltip').tooltip();
  });
</script>

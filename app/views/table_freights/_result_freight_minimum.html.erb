<div class="panel panel-success">
  <div class="panel-body">
  	<p>
	  	<strong>
		    Total Frete: 
		    <%= number_to_currency(freight_minimum[:total_freight], unit: "R$ ", separator: ",", delimiter: ".") %>
	  	</strong>
  	</p>
  	
  	<p>
  		<strong>Vr p/ KG:</strong>
  		<%= number_to_currency(freight_minimum[:value_kg], unit: "R$ ", separator: ",", delimiter: ".", precision: 3) %>
  	</p>
  </div>
</div>	

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Calculo do Frete</h3>
  </div>
  <div class="panel-body">
		<p>
			<strong>Valor NF:</strong>
			<%= number_to_currency(freight_minimum[:value_nf], unit: "R$ ", separator: ",", delimiter: ".") %>
		</p>

		<p>
			<strong>Peso:</strong>
			<%= number_with_precision(freight_minimum[:weight], precision: 3, separator: ',', delimiter: '.') %>
		</p>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Custos/despesas</h3>
  </div>
  <div class="panel-body">
		<p>
			<strong>Frete Carreteiro: </strong>
			<%= number_to_currency(freight_minimum[:freight], unit: "R$ ", separator: ",", delimiter: ".") %>
		</p>

		<p>
			<strong>Diária Carreteiro: </strong>
			<%= number_to_currency(freight_minimum[:daily_rate], unit: "R$ ", separator: ",", delimiter: ".") %>
		</p>

		<p>
			<strong>Descarga: </strong>
			<%= number_to_currency(freight_minimum[:discharge], unit: "R$ ", separator: ",", delimiter: ".") %>
		</p>	

		<p>
			<strong>Seguro: </strong>
			<%= number_to_currency(freight_minimum[:secure], unit: "R$ ", separator: ",", delimiter: ".") %>
		</p>
			
		<p>
			<strong>Consulta GR:</strong>
			<%= number_to_currency(freight_minimum[:risk_manager], unit: "R$ ", separator: ",", delimiter: ".") %>
		</p>

		<p>
			<strong>Pedágios:</strong>
			<%= number_to_currency(freight_minimum[:toll], unit: "R$ ", separator: ",", delimiter: ".") %>
		</p>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Totais</h3>
  </div>

<%= form_for(@antt) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label :rntrc %><br>
    <%= f.text_field :rntrc, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :cpf_cnpj %><br>
    <%= f.text_field :cpf_cnpj, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>  

  <div class="form-group">
    <%= f.label :date_expiration %><br>
    <%= f.text_field :date_expiration, class: "form-control data", value: date_br(@antt.date_expiration) %>
  </div>

  <div class="form-group">
    <%= f.submit "Salvar", class: "btn btn-blue" %>
    <%= link_to "Exibir",  antt_path(@antt), class: "btn btn-info" if !@antt.new_record? %>
    <%= link_to "Listar Todos", antts_path, class: "btn btn-default" %>
  </div>

<% end %>


<%= render 'data_driver' %>

<%= form_for(@offer_driver, :url => reject_offer_driver_path, method: :patch, :html => { :multipart => true } ) do |f| %> 
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
  	<%= f.label :observation, "Motivo do Rejeição" %>
  	<%= f.text_area :observation, rows: 5, class: "form-control" %>
  </div>  

  <div class="form-group">
      <%= link_to 'Voltar', offer_charge_path(@offer_driver.offer_charge), class: "btn btn-default" %>
      <%= f.submit "Rejeitar Motorista", class: "btn btn-primary" %>
  </div>  

<% end %>
    			    <span title="NoShow" class="fa fa-square-o fa-2x" style='color: red' aria-hidden='true'></span> 
    			<% end %>    
        <% end %>    
     	</td>
    	<td>
        <% if offer_driver.waiting_or_confirmed_status?  %>

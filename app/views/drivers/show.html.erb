<%= render 'shared/show_contacts', object: @driver %>

<h2>Contas Bancarias</h2>
<% if @driver.account_banks.any? %>
  <table class="table table-striped">
    
    <thead>
      <th>Banco</th>
      <th>Agencia</th>
      <th>Conta Corrente</th>
      <th>Favorecido</th>
      <th>CPF/CNPJ</th>
    </thead>

    <tbody>
      <% @driver.account_banks.each do |account| %>
        <tr>
          <td><%= account.banco %></td>
          <td><%= account.agencia %></td>
          <td><%= account.conta_corrente %></td>
          <td><%= account.favorecido %></td>
          <td><%= account.cpf_cnpj %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>This person has no account bank yet.</p>
<% end %>


<% if @driver.present? %>
  $('#div_result_person').empty(); 
  $('#div_result_person').append("<%= j( render(:partial => 'result_driver', locals: {driver: @driver}) ) %>");
<% else %>
  $('#div_result_person').empty();
  $("#div_result_person").append("<%= j(content_tag(:div, content_tag(:p, "Not found any driver"), class: "alert alert-danger")) %> ");
<% end %>

<fieldset class="item">
  <div class="row">
    <div class="col-xs-4">
      <%= f.select(:client_id, Client.order(:nome).collect {|c| [c.nome, c.id]}, {include_blank: "Informe o Cliente"}, {class: "form-control input-sm"} ) %>
    </div>  
    
    <div class="col-xs-4">
      <%= f.select :restriction, select_restriction, {include_blank: "Motivo da Restrinção"}, {class: "form-control input-sm" }   %>
    </div>  
    
  </div>
  <br />
  <div class="row">
    <div class="col-xs-8">
      <%= f.text_area :observation, class: "form-control input-sm", placerolder: "Observação" %>
    </div>  
    <a href="#" class="btn btn-danger btn-sm remove" data-confirm="Are you sure?">[-] Apagar</a>
  </div>

  <%= f.hidden_field :id %>
  <%= f.hidden_field :_destroy %>
</fieldset>
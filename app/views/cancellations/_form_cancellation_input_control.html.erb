<%= form_for(@cancellation, html: {multipart: true	}) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
 
  <%= hidden_field_tag "cancellation[cancellation_id]", @input_control.id %>
  <%= hidden_field_tag "cancellation[cancellation_type]", "InputControl" %>

  <%= render 'cancellations/fields', f: f %>

  <%= f.submit "Solicitar Cancelamento", class: "btn btn-success" %>
<% end %>

<% modal ||= false %>
<% remote = modal ? true : false %>
<%= form_for(@cancellation, html: {multipart: true	}) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token -%> 

  <%= hidden_field_tag "cancellation[cancellation_id]", item_id %>
  <%= hidden_field_tag "cancellation[cancellation_type]", "NfsKey" %>

  <%= render 'cancellations/fields', f: f %>

  <%= f.submit "Solicitar Cancelamento", class: "btn btn-success" %>
<% end %>


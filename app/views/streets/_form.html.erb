<%= form_with(model: street, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="row">
    <div class="form_group col-md-6">
      <%= f.label :warehouse %>
      <% if @street.new_record? %>
        <%= select_tag "warehouse", options_from_collection_for_select(Warehouse.all, "id", "name"),  {include_blank: "Escolha seu armazém", class: "form-control", id: "warehouse-select"} %>
      <% else %>
        <%= select_tag "warehouse", options_from_collection_for_select(Warehouse.all, "id", "name", @street.deposit.warehouse.id),  {include_blank: "Escolha seu armazém", class: "form-control", id: "warehouse-select"} %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="form_group col-md-6">
      <%= f.label :deposit_id %>
        <%= select_tag "street[deposit_id]", [],  {disabled: true, class: "form-control", id: "deposit-select"} %>
    </div>
  </div>

<div class="row">
  <div class="form_group col-md-6">
    <%= f.label :name %>
    <%= f.text_field :name, id: :street_name, class: "form-control" %>
  </div>
</div>

  <div class="actions">
    <%= f.submit "Salvar", class: "btn btn-primary" %>
    <%= link_to 'Back', streets_path, class: "btn btn-default" %>
  </div>
<% end %>

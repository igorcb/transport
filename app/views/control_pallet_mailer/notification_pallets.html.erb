
<!-- <table style="table-layout: fixed; width: 100px; overflow: hidden;"> -->
<table border="1" style="width:718px;">
		<tr>
			<td align="center" bgcolor="#1f497d" style="color:white" colspan="2">
				<h2>NOTIFICACAO DE ARMAZENAGEM</h2>
			</td>
		</tr>
		<tr>
			<td align="center" style="width:150px;">Tipo</td>
			<td align="center" bgcolor="#ffff99" style="color:#1f497d" >ENTRADA DE PALLETS VAZIO</td>
		</tr>
		<tr>
			<td align="center" style="width:150px;">Data da Ocorrência</td>
			<td align="center" style="color:#1f497d"><%= l @control_pallet.input_control.date_receipt, format: :long   %></td>
		</tr>
		<tr>
			<td align="center" style="width:150px;">Transportadora</td>
			<td align="center" style="color:#1f497d"><%= @control_pallet.input_control.carrier.nome %></td>
		</tr>
		<tr>
			<td align="center" style="width:150px;">Hora</td>
			<td align="center" style="color:#1f497d"><%= time_br(Time.zone.now) %></td>
		</tr>
		<tr>
			<td align="center" style="width:150px;">Veiculo/Placa</td>
			<td align="center" style="color:#1f497d"><%= @control_pallet.input_control.place %></td>
		</tr>
		<tr>
			<td align="center" style="width:150px;">Motorista</td>
			<td align="center" style="color:#1f497d"><%= @control_pallet.input_control.driver.nome %></td>
		</tr>
		<tr>
			<td align="center" style="width:150px;">NF Origem</td>
			<td align="center" style="color:#1f497d"><%= @control_pallet.nfe %></td>
		</tr>
		<tr>
			<td align="center" style="width:150px;">Cliente</td>
			<td align="center" style="color:#1f497d"><%= @control_pallet.input_control.nfe_xmls_client(@control_pallet.nfe) %></td>
		</tr>
		<tr>
			<td align="center" style="width:150px;">Cidade/UF Destino</td>
			<td align="center" style="color:#1f497d"><%= @control_pallet.input_control.nfe_xmls_city(@control_pallet.nfe) %></td>
		</tr>
		<tr>
			<td align="center" style="width:150px;">Qtde</td>
			<td align="center" style="color:#1f497d"><%= @control_pallet.qte %></td>
		</tr>
		<tr>
			<td align="center" style="width:150px;">NF Devolução</td>
			<td align="center" bgcolor="#ffff99" style="color:#1f497d"><%= @control_pallet.nfd.present? ? @control_pallet.nfd : "" %></td>
		</tr>
</table>

<%= image_tag attachments["assinatura_paulo.png"].url -%>

<fieldset class="item">
  <div class="row">
    <div class="col-xs-3">
      <%= f.select( :type_service_id, TypeService.logistica.collect {|p| [ p.descricao, p.id ] }, {include_blank: true}, {class: "form-control input-sm" } ) %>
    </div>

    <div class="col-xs-1">
      <%= f.text_field :qtde, size: 5, class: "form-control input-sm", placeholder: "Qtde" %>
    </div>

    <div class="col-xs-1">
      <%= f.text_field :qtde_recebida, size: 5, class: "form-control input-sm", placeholder: "Qtde Recebida" %>
    </div>

    <div class="col-xs-2">
      <%= f.text_field :valor, class: "form-control input-sm money2", value: to_real(f.object.valor), placeholder: "Valor do ServiÃ§o" %>
    </div>

    <div class="col-xs-2">
      <%= f.text_field :valor_pago, class: "form-control input-sm money2", value: to_real(f.object.valor_pago), placeholder: "Valor Pago" %>
    </div>

    <a href="#" class="btn btn-danger btn-sm remove" data-confirm="Are you sure?">[-] Apagar</a>

  <%= f.hidden_field :id %>
  <%= f.hidden_field :_destroy %>
</fieldset>

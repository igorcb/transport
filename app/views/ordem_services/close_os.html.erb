 <div class="panel panel-default">
  <div class="panel-heading">Listagem de NF-e</div>
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>NF-e</th>
            <th>Chave</th>
            <th>Canhoto</th>
          </tr>
        </thead>

        <tbody>
           <% @ordem_service.nfe_keys.each do |nfe| %>
            <tr>
              <td><%= nfe.nfe %></td>
              <td><%= nfe.chave %></td>
              <% if nfe.asset.present? %>
              	<td>
                  <%#= link_to '<i class="fa fa-check fa-2x" style="color: LimeGreen" aria-hidden="true"></i>'.html_safe, nfe.asset.url(:thumb, false) if nfe.asset.present? %>
                  <% if nfe.asset.present? %>                  
                    <%= link_to nfe.asset.url(:original, false) do %>
                      <i class="fa fa-check fa-2x" style="color: LimeGreen" aria-hidden="true"></i> 
                    <% end %>
                  <% end %>
                </td>
              <% else %>
								<td><i class="fa fa-times fa-2x" style="color: red" aria-hidden="true">
                </i></td>
              <% end %>
            </tr>  
          <% end %>
        </tbody>
     </table>
    </div>    
  </div>
</div>

<%= form_for(@ordem_service, :url => close_ordem_service_path, :html => { :multipart => true } ) do |f| %> 

  <div class="form-group">
      <%= link_to 'Voltar', ordem_service_path(@ordem_service), class: "btn btn-default" %>
      <%= f.submit "Fechar OS", class: "btn btn-primary" %>
  </div>  

<% end %>
<div class="panel panel-default">
  <div class="panel-heading">Listagem de Coleta de Palletes</div>
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>OS Nº</th>
            <th>Cliente</th>
            <th>Estado</th>
            <th>Cidade</th>
            <th>Dt Agen.</th>
            <th>Qtde</th>
            <th>Status</th>
            <th colspan="3">Opções</th>
          </tr>
        </thead>

        <tbody>
          <% @ordem_services.each do |ordem_service| %>
            <tr>
              <td><%= link_to ordem_service.id, show_agent_ordem_service_path(ordem_service.id) %></td>
              <td><%= link_to truncate(ordem_service.client.nome, length: 20), show_agent_ordem_service_path(ordem_service.id) %></td>
              <td><%= ordem_service.estado %></td>
              <td><%= truncate(ordem_service.cidade, length: 10) %></td>
              <td><%= link_to date_br(ordem_service.data), show_agent_ordem_service_path(ordem_service.id) %></td>
              <td><%= ordem_service.qtde %></td>
              <td><%= ordem_service.status_name %></td>
              <td><%= link_to 'Detalhe', show_agent_ordem_service_path(ordem_service.id), class: "btn btn-info btn-xs" %></td>
<!--               <td><%#= link_to 'Edit', edit_ordem_service_path(ordem_service), class: "btn btn-primary btn-xs" %></td>
              <td><%#= link_to 'Destroy', ordem_service, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
 -->            
              </tr>
          <% end %>
        </tbody>
      </table>
    </div>    
  </div>
</div>


              </td>
              <td><%= link_to ordem_service.placa,  ordem_service %></td>
              <td><%= link_to truncate(ordem_service.driver.nome, length: 18), ordem_service, { :title => ordem_service.driver.nome } %></td>
              <td><%= link_to truncate(ordem_service.client.nome, length: 25), ordem_service, { :title => ordem_service.client.nome } %></td>
              <td><%= link_to ordem_service.data, ordem_service %></td>
              <td><%= link_to ordem_service.estado, ordem_service %></td>
              <td><%= link_to ordem_service.cidade, ordem_service %></td>
              <td><%= link_to ordem_service.cte, ordem_service %></td>
              <td style="text-align: Right"><%= ordem_service.valor_ordem_service %></td>
              <td><%= ordem_service.status_name %></td>
              <td><%#= link_to 'Show', ordem_service, class: "btn btn-info btn-xs" %></td>
            </tr>
            <% i = i +1 %>
          <% end %>
 
          <tr>
            <td colspan="8"><strong>Total Selecionado</strong></td>
            <td><%= text_field_tag :valor_total, "", value: 0, disabled: true, size: 10, style: "text-align: Right"  %></td>
            <td colspan="2"><strong></strong></td>
          </tr>
 
      </table>
    </div>    
  </div>
</div>

<%= submit_tag("Faturar", class: "btn btn-primary") %> 

<% end %>


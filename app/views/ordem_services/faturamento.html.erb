<div id="tab_ordemservices">
  <div id="typeserv_id">
    <%= label_tag "type_service_id", "Tipo de ServiÃ§o" %> <br>
    <%= select_tag "type_service_id", options_from_collection_for_select(@type_services, "id", "descricao"), :prompt => "Selecione um Tipo de Servico" %>
  </div>

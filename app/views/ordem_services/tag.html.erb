<style>
	@page {
  size: landscape;
	}

	.tag_header_left {
		margin: 0px 0 30px 0;
		padding: 0 0 0 0;
		font-size: 40px;
	}
	.tag_header {
		text-align: center;
  }
	.tag_content {
		text-align: center;
	}
	.tag_footer {
		text-align: center;
    font-size: 60px;
  }
	
</style>
<% @ordem_service.nfe_keys.each do |nfe_key| %>  
	<div class="tag_header_left"><strong>CT-e: <%= @ordem_service.cte_keys.first.cte if @ordem_service.cte_keys.present? %></strong>, peso: <%= number_with_precision(@ordem_service.ordem_service_logistic.peso, precision: 2, separator: ',', delimiter: '.') %></div>
  <% tam_letra_header = @ordem_service.cidade_estado.size > 15 ? 50 : 70 %>

	<div class="tag_header" style="font-size: <%= tam_letra_header %>px"><strong><%= @ordem_service.cidade %>/<%= @ordem_service.estado %></strong></div>
	
	<div class="tag_content" style="font-size: 180px">
		<%= nfe_key.nfe %>  
	</div>
	
	<div class="tag_footer"><strong><%= truncate @ordem_service.client.fantasia, length:30 %></strong> </div>

<% end %>

<div class="panel panel-default">
  <div class="panel-heading">Listagem de Ordem de Serviço</div>
  <div class="panel-body">
    <%= link_to 'Nova Ordem de Serviço', new_ordem_service_path, class: "btn btn-primary btn-lg btn-block" %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Placa</th>
            <th>Driver</th>
            <th>Client</th>
            <th>Data</th>
            <th>Estado</th>
            <th>Cidade</th>
            <th>Cte</th>
            <th>Nfe</th>
            <th>Status</th>
            <th colspan="3">Opções</th>
          </tr>
        </thead>

        <tbody>
          <% @ordem_services.each do |ordem_service| %>
            <tr>
              <td><%= ordem_service.placa %></td>
              <td><%= ordem_service.driver.nome %></td>
              <td><%= ordem_service.client.nome %></td>
              <td><%= ordem_service.data %></td>
              <td><%= ordem_service.estado %></td>
              <td><%= ordem_service.cidade %></td>
              <td><%= ordem_service.cte %></td>
              <td><%= ordem_service.nfe %></td>
              <td><%= ordem_service.status_name %></td>
              <td><%= link_to 'Show', ordem_service, class: "btn btn-info btn-sm" %></td>
              <td><%= link_to 'Edit', edit_ordem_service_path(ordem_service), class: "btn btn-primary btn-sm" %></td>
              <td><%= link_to 'Destroy', ordem_service, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>    
  </div>
</div>


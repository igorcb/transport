<ol class="breadcrumb">
  <li><%= link_to "Home", dashboard_visit_path %></li>
  <li class="active">Pallet</li>
</ol>

<div class="panel panel-default">
  <div class="panel-heading">Listagem de Pallets</div>
  <div class="panel-body">
    <%= link_to 'Novo Controle Palete', new_pallet_path, class: "btn btn-blue btn-lg btn-block" %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Cnpj</th>
            <th>Client</th>
            <th>Data Ype</th>
            <th>Qtde Ype</th>
            <th>Data Agen</th>
            <th>Qtde</th>
            <th>Status</th>
            <th colspan="3">Opções</th>
          </tr>
        </thead>

        <tbody>
          <% @pallets.each do |pallet| %>
            <tr>
              <td><%= pallet.client.cpf_cnpj %></td>
              <td><%= truncate(pallet.client.nome, lenght: 20) %></td>
              <td><%= date_br(pallet.data_informada) %></td>
              <td><%= pallet.qtde_informada %></td>
              <td><%= date_br(pallet.data_agendamento) %></td>
              <td><%= pallet.qtde %></td>
              <td><%= pallet.status_name %></td>
              <td><%= link_to 'Show', pallet, class: "btn btn-info btn-xs" %></td>
              <td><%= link_to 'Edit', edit_pallet_path(pallet), class: "btn btn-blue btn-xs" %></td>
              <td><%= link_to 'Destroy', pallet, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>    
  </div>
</div>


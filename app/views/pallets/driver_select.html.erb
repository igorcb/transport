<ol class="breadcrumb">
  <li><%= link_to "Home", dashboard_path %></li>
  <li><%= link_to "Pallet", pallets_path %></li>
  <li class="active">Create OS</li>
</ol>

<h1>Criar Ordem de Serviço</h1>
<div class="alert alert-info" role="info">
  Para que possa gerar a ordem de serviço é nescessário informar alguns dados
</div>

<%= form_tag({:controller => "pallets", :action => "create_os"}, :method => "post") do |f| %>
  <%= hidden_field_tag :pallet_id, @pallet.id %>

  <div class="form-group">
    <%= label_tag :driver_id, "Motorista" %>
    <%= select_tag :driver_id, options_from_collection_for_select(@drivers, "id", "nome"), :prompt => "Selecione um Motorista", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :placa, "Placa" %>
    <%= text_field_tag :placa, nil, class: "form-control placa" %>
  </div>
  <div class="form-group">
    <%= label_tag :estado, "Estado" %>
    <%= select_tag "Estado", options_for_select(select_uf),:name=>"estado",:id=>"estado", prompt: "Selecione um Estado",class: "form-control " %>
    
  </div>
  <div class="form-group">
    <%= label_tag :cidade, "Cidade" %>
    <%= text_field_tag :cidade, nil, class: "form-control" %>
  </div>

  <%= submit_tag("Criar OS", class: "btn btn-primary") %> 

  <br/>
  <br/>

<% end %>

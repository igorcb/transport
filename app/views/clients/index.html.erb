<div class="panel panel-default">
  <div class="panel-heading">Listagem de Cliente</div>
  <div class="panel-body">
    <%= link_to 'Novo Cliente', new_client_path, class: "btn btn-primary btn-lg btn-block" %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Cpf cnpj</th>
            <th>Nome</th>
            <th>Fantasia</th>
            <th colspan="3">Opções</th>
          </tr>
        </thead>

        <tbody>
          <% @clients.each do |client| %>
            <tr>
              <td><%= client.cpf_cnpj %></td>
              <td><%= client.nome %></td>
              <td><%= client.fantasia %></td>
              <td><%= link_to 'Show', client, class: "btn btn-info btn-sm" %></td>
              <td><%= link_to 'Edit', edit_client_path(client), class: "btn btn-primary btn-sm" %></td>
              <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>    
  </div>
</div>
<%= form_for(@specialty) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label :descricao %><br>
    <%= f.text_field :descricao, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= f.label :valor %><br>
    <%= f.text_field :valor, class: "form-control"  %>
  </div>
  
  <div class="form-group">
    <%= f.submit "Salvar", class: "btn btn-primary" %>
    <%= link_to "Exibir",  specialty_path(@specialty), class: "btn btn-info" if !@specialty.new_record? %>
    <%= link_to "Listar Todos", specialties_path, class: "btn btn-default" %>
  </div>

<% end %>

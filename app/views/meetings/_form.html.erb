<%= form_for(@meeting) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label :date_event,"Data" %><br>
    <% if @meeting.new_record? %>
      <%= f.text_field :date_event, class: "form-control data" %>
    <% else %>
      <%= f.text_field :date_event, class: "form-control data", value: date_br(@meeting.date_event)  %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :time_event,"Hora" %><br>
    <%= f.text_field :time_event, class: "form-control time" %>
  </div>  
  <div class="form-group">
    <%= f.label :local, "Local" %><br>
    <%= f.text_field :local, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :summoned, "Convocado por" %><br>
    <%= f.text_field :summoned, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :facilitator, "Facilitador" %><br>
    <%= f.text_field :facilitator, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :secretary, "Secretario(a)" %><br>
    <%= f.text_field :secretary, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :objective, "Objetivo" %><br>
    <%= f.text_area :objective, class: "form-control" %>
  </div>

  <h3>Documentos</h3> 
  <div id="documents">
    <div class="items">
      <%= f.nested_fields_for :assets do |f| 
        render 'shared/asset', f: f
      end  -%>
    </div>
      <br /> <a href="#" class="btn btn-success btn-sm add">[+] Documento</a>  
  </div>

  <hr />
  
  <div class="form-group">
    <%= f.submit "Salvar", class: "btn btn-blue" %>
    <%= link_to "Exibir",  meeting_path(@meeting), class: "btn btn-info" if !@meeting.new_record? %>
    <%= link_to "Listar Todos", meetings_path, class: "btn btn-default" %>
  </div>

<% end %>

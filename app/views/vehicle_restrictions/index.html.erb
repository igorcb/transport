<div class="panel panel-default">
  <div class="panel-heading">Listagem de Veiculos Bloqueados</div>
  <div class="panel-body">
    <%#= link_to 'Novo Veículos', new_vehicle_path, class: "btn btn-blue btn-lg btn-block" %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Placa</th>
            <th>Tipo</th>
            <th>Tipo veiculo</th>
            <th>No.Eixo</th>
            <th>Qtde Pallets</th>
            <th>Piso</th>
            <th>Motorista</th>
            <th>Proprietário</th>
            <th colspan="3">Opções</th>
          </tr>
        </thead>

        <tbody>
          <% @vehicle_restrictions.each do |vehicle_restriction| %>
            <tr>
              <td><%= vehicle_restriction.vehicle.place_state %></td>
              <td><%= vehicle_restriction.vehicle.tipo_nome if vehicle_restriction.vehicle.tipo.present? %></td>
              <td><%= vehicle_restriction.vehicle.tipo_veiculo_nome %></td>
              <td align="center"><%= vehicle_restriction.vehicle.numero_eixos %></td>
              <td><%= "#{vehicle_restriction.vehicle.qtde_paletes}" %></td>
              <td><%= vehicle_restriction.vehicle.tipo_piso_assoalho_nome if vehicle_restriction.vehicle.tipo_piso_assoalho.present? %></td>
              <td><%= vehicle_restriction.vehicle.drivers.first.nome  if vehicle_restriction.vehicle.drivers.present? %></td>
              <td><%= vehicle_restriction.vehicle.owners.first.fantasia  if vehicle_restriction.vehicle.owners.present? %></td>
              <td>
                <%= link_to unlock_vehicle_restriction_path(vehicle_restriction) do %>
                  <i class="fas fa-unlock notification"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

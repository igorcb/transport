<div class="panel panel-default">
  <div class="panel-heading">Listagem de Tipo de Serviço</div>
  <div class="panel-body">
    <%= link_to 'Novo Tipo de Serviço', new_type_service_path, class: "btn btn-blue btn-lg btn-block" %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Descrição</th>
            <th>Tipo</th>
            <th colspan="3">Opções</th>
          </tr>
        </thead>

        <tbody>
          <% @type_services.each do |type_service| %>
            <tr>
              <td><%= type_service.descricao %></td>
              <td><%= type_service.tipo_nome %></td>
              <td><%= link_to 'Show', type_service, class: "btn btn-info btn-sm" %></td>
              <td><%= link_to 'Edit', edit_type_service_path(type_service), class: "btn btn-blue btn-sm" %></td>
              <td><%= link_to 'Destroy', type_service, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>    
  </div>
</div>


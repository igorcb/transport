<div class="container-fluid">
  <p id="notice"><%= notice %></p>

  <h1>Deposits</h1>
<%= link_to 'New Deposit', new_deposit_path, class: "btn btn-primary" %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Warehouse</th>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @deposits.each do |deposit| %>
      <tr>
        <td><%= deposit.warehouse.name %></td>
        <td><%= deposit.name %></td>
        <td><%= link_to 'Edit', edit_deposit_path(deposit), class:"btn btn-primary" %></td>
        <td><%= link_to 'Destroy', deposit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>



</div>

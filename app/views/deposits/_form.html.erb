<%= form_with(model: deposit, local: true) do |f| %>
<%= render 'shared/error_messages', object: f.object %>

  <div class="row">
    <div class="form_group col-md-5">
      <%= f.label :warehouse_id %>
      <%= select("deposit", "warehouse_id", Warehouse.all.collect {|p| [ p.name, p.id ] }, { include_blank: "escolha um armazÃ©m" }, {class: "form-control"}) %>
    </div>
  </div>
  <div class="row">
    <div class="form_group col-md-5">
      <%= f.label :name %>
      <%= f.text_field :name, id: :deposit_name, class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Salvar", class: "btn btn-primary" %>
    <%= link_to 'Back', deposits_path, class: "btn btn-default" %>
  </div>
<% end %>

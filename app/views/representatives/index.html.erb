<div class="panel panel-default">
  <div class="panel-heading">Listagem de Cliente</div>
  <div class="panel-body">
    <%= link_to 'Novo Representante', new_representative_path, class: "btn btn-primary btn-lg btn-block" %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Cpf cnpj</th>
            <th>Nome</th>
            <th>Fantasia</th>
            <th>Estado</th>
            <th>Cidade</th>
            <th colspan="3">Opções</th>
          </tr>
        </thead>

        <tbody>
          <% @representatives.each do |representative| %>
            <tr>
              <td><%= link_to representative.cpf_cnpj, representative %></td>
              <td><%= link_to truncate(representative.nome, length: 25), representative, title: representative.nome %></td>
              <td><%= link_to truncate(representative.fantasia, length: 25), representative, title: representative.fantasia %></td>
              <td><%= representative.estado %></td>
              <td><%= representative.cidade %></td>
              <td><%= link_to 'Exibir', representative, class: "btn btn-info btn-xs" %></td>
              <td><%= link_to 'Editar', edit_representative_path(representative), class: "btn btn-primary btn-xs" %></td>
              <td><%= link_to 'Deletar', representative, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>    
  </div>
</div>

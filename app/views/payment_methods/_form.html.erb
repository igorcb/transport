<%= form_for(@payment_method) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

   <div class="form-group">
    <%= f.label :descricao %><br>
    <%= f.text_field :descricao, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.submit "Salvar", class: "btn btn-blue" %>
    <%= link_to "Exibir",  payment_method_path(@payment_method), class: "btn btn-info" if !@payment_method.new_record? %>
    <%= link_to "Listar Todos", payment_methods_path, class: "btn btn-default" %>
  </div>
  
<% end %>

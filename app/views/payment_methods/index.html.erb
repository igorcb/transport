<div class="panel panel-default">
  <div class="panel-heading">Listagem de Forma de Pagamento </div>
  <div class="panel-body">
    <%= link_to 'Novo Forma de Pagamento', new_payment_method_path, class: "btn btn-blue btn-lg btn-block" %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Descrição</th>
            <th colspan="3">Opções</th>
          </tr>
        </thead>

        <tbody>
          <% @payment_methods.each do |payment_method| %>
            <tr>
              <td><%= payment_method.descricao %></td>
              <td><%= link_to 'Show', payment_method, class: "btn btn-info btn-sm" %></td>
              <td><%= link_to 'Edit', edit_payment_method_path(payment_method), class: "btn btn-blue btn-sm" %></td>
              <td><%= link_to 'Destroy', payment_method, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>    
  </div>
</div>



<div class="panel panel-default">
  <div class="panel-heading">Listing brokers</div>
  <div class="panel-body">
    <div id="client">
      <%#= render 'client' %>
    </div>

    <%= link_to 'New Broker', new_broker_path, class: "btn btn-primary btn-sm btn-block" %>
    <div class="table-responsive">
      <table class="table table-striped">
        <div id="result_client">

        <thead>
          <tr>
            <tr>
              <th>CNPJ.</th>
              <th>Seguradora</th>
              <th colspan="3">Opções</th>
            </tr>
          </tr>
        </thead>

        <tbody>
          <% @brokers.each do |broker| %>
            <tr>
              <td><%= broker.cnpj %></td>
              <td><%= broker.name %></td>
              <td><%= link_to 'Show', broker, class: "btn btn-info btn-xs" %></td>
              <td><%= link_to 'Edit', edit_broker_path(broker), class: "btn btn-primary btn-xs" %>
              <td><%= link_to 'Destroy', broker, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    </div>    
  </div>
</div>
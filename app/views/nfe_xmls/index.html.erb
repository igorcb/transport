<div class="panel panel-default">
  <div class="panel-heading">Listagem de XML de NF-e</div>
  <div class="panel-body">
    <%= link_to 'Novo Upload', new_nfe_xml_path, class: "btn btn-primary btn-lg btn-block" %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Chave</th>
            <th>Status</th>
            <th>Option</th>
          </tr>
        </thead>

        <tbody>
          <% @nfe_xmls.each do |nfe| %>
            <tr>
              <td><%= nfe.asset_file_name %></td>
              <td><%= link_to "#{nfe.asset.path}", nfe.asset.url(:original, timestamp: false) %></td>
              <td><%= nfe.status_name %></td>
              <td><%= nfe.error_name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>    
  </div>
</div>

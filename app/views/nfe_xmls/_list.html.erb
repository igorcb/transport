<% @nfe_xmls.each do |nfe_xml| %>
<tr>
  <td><%= date_br nfe_xml.issue_date %></td>
  <td><%= nfe_xml.place %></td>
  <td><%= nfe_xml.numero %></td>
  <td><%= nfe_xml.source_client.nome if nfe_xml.source_client.present? %></td>
  <td><%= nfe_xml.source_client.estado if nfe_xml.source_client.present? %></td>
  <td><%= nfe_xml.target_client.nome if nfe_xml.target_client.present? %></td>
  <td><%= nfe_xml.target_client.estado if nfe_xml.target_client.present? %></td>
  <td><%= nfe_xml.peso %></td>
  <td><%= nfe_xml.volume %></td>
  <% if nfe_xml.processado? %>
		<td><i class="fa fa-check fa-2x" style="color: LimeGreen" aria-hidden="true"></i></td>
	<% else %>
		<td><i class="fa fa-times fa-2x" style="color: red" aria-hidden="true"></i></td>
	<% end %>
  <td><%= nfe_xml.has_input_control %></td>
  <td><%#= link_to "Process", xml_process_nfe_xml_path(nfe_xml), method: :post %>
  <%= link_to xml_process_nfe_xml_path(nfe_xml), method: :post do %>
    <i class="fas fa-sync-alt fa-2x"></i></i>
  <% end %>
    </td>
</tr>

<% end %>

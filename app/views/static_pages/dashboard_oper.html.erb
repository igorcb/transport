<div class="row">
  <div class="col-sm-6">
    <div class="statcard statcard-primary p-4">
      <h3 class="statcard-number">
        <%= InputControl.received.count %> / 
        <%= InputControl.the_day.count %> /
        <%= InputControl.pending.count %>
        <small class="delta-indicator delta-positive"></small>
      </h3>
      <span class="statcard-desc"><%= link_to 'Entradas', oper_input_controls_path %></span>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="statcard statcard-success p-4">
      <h3 class="statcard-number">
        <%= Boarding.the_day.status_boarding.count %> /
        <%= Boarding.the_day.count %>
        <small class="delta-indicator delta-negative"></small>
      </h3>
      <span class="statcard-desc"><%= link_to 'Embarques', oper_boardings_path %></span>
    </div>
  </div>
</div>

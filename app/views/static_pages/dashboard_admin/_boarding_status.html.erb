<%
series = [
    {name: "Aberto", data: @boarding_status.where("status = ?", 0).count.count  },
    {name: "Carregando", data: @boarding_status.where("status = ?", 4).count.count  },
    {name: "Embarcado", data: @boarding_status.where("status = ?", 1).count.count  },
    {name: "Entregue", data: @boarding_status.where("status = ?", 2).count.count  }
  ]
options = {
  subtitle: 'Agrupados por status',
  xtitle: 'dias',
  ytitle: 'NÂº de entradas',
  height: 300,
  stacked: true
}
 %>

 <div class="card">
   <h3 class="text-center">Embarques por status</h3>
   <div id="input" class="card-body">
     <div class="row">
       <div class="col-md-12">
         <h1 class="total"><span class="counter_number" data-init="0" data-end="<%= InputControl.available_supervisor.count %>"></span></h1>
         <%= donut_chart(series, options) %>
       </div>
   </div>
   <small>Atualizado hoje <%= date_br(Date.today) %> as <%= time_br(Time.now) %></small>
   </div>
 </div>

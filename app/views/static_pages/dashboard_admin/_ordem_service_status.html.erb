<%
series = [
    {name: "Aberto", data: OrdemService.where("status = ?", 0).count  },
    {name: "Ag. Emb", data: OrdemService.where("status = ?", 8).count  },
    {name: "Embarcado", data: OrdemService.where("status = ?", 9).count  },
    {name: "Entregua Efetuada", data: OrdemService.where("status = ?", 1).count  },
    {name: "Fechado", data: OrdemService.where("status = ?", 2).count  }
  ]
options = {
  subtitle: 'Agrupados por status',
  xtitle: 'dias',
  ytitle: 'Nº de entradas',
  height: 200,
  stacked: true
}
 %>

 <div class="card">
   <h3 class="text-center">Ordem de Serviço</h3>
   <div id="input" class="card-body">
     <div class="row">
       <div class="col-md-12">
         <h1 class="total"><span class="counter_number" data-init="0" data-end="<%= InputControl.available_supervisor.count %>"></span></h1>
         <%= donut_chart(series, options) %>
       </div>
   </div>
   <small>Atualizado hoje <%= date_br(Date.today) %> as <%= time_br(Time.now) %></small>
   </div>
 </div>

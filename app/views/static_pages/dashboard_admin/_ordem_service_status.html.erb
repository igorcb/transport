<%
series = [
    {name: "Aberto", data: @ordem_service_open.count  },
    {name: "Ag. Emb", data: @ordem_service_waiting_boarding.count  },
    {name: "Embarcado", data: @ordem_service_boarding.count },
    {name: "Entrega Efetuada", data: @ordem_service_delivery.count  },
    {name: "Fechado", data: @ordem_service_close.count  }
  ]
options = {
  subtitle: 'Agrupados por status',
  xtitle: 'dias',
  ytitle: 'Nº de entradas',
  height: 200,
  stacked: true
}
 %>

 <div class="card">
   <h3 class="text-center">Ordem de Serviço</h3>
   <div id="input" class="card-body">
     <div class="row">
       <div class="col-md-12">
         <h1 class="total"><span class="counter_number" data-init="0" data-end="<%=  %>"></span></h1>
         <%= donut_chart(series, options) %>
       </div>
   </div>
   <small>Atualizado hoje <%= date_br(Date.today) %> as <%= time_br(Time.now) %></small>
   </div>
 </div>

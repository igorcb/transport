<p style="margin-bottom: 20px"><%= icon_status_boarding(boarding.status) %> <%= date_br (boarding.date_boarding) %> - <%= boarding.status_name %> </p>
<p><strong>Embarque: </strong><span><%= boarding.id %></span></p>
<p><strong>Motorista: </strong>
<span>
  <% if DriverRestriction.driver_loking?(boarding.driver.id) %>
    <%= boarding.driver.nome %>
  <% else %>
    <%= link_to boarding.driver.nome, new_driver_driver_restriction_path(boarding.driver.id) %>
  <% end %>
  <small>
  <%= boarding.driver_checkin? ? "" : "(Não verificado)" %>
  </small>
</span>
</p>
<p><strong>Veículos: </strong>
  <span>
  <% boarding.boarding_vehicles.each do |item| %>
    [
    <% if VehicleRestriction.vehicle_loking?(item.vehicle.id) %>
      <%= item.vehicle.placa %>
    <% else %>
      <%= link_to item.vehicle.placa, new_vehicle_vehicle_restriction_path(item.vehicle.id) %>
    <% end %>
    ]
  <% end %>
  </span>
</p>

<p><strong>No Lacre Um: </strong><span><%= boarding.sealing %></span></p>
<p><strong>No Lacre Dois: </strong><span><%= boarding.sealing_two %></span></p>
<p><strong>No Lacre Tres: </strong><span><%= boarding.sealing_three %></span></p>
<p><strong>Cidades: </strong><span><%= boarding.get_cities %></span></p>
<% if boarding.pending? %>
	<p><strong>Observacao: </strong><span><label>Embarque com restrição</label></span></p>
<% end %>

<% if boarding.driver_checkin %>

	<% if !boarding.places.include?(boarding.driver_checkin_palce_horse) || !boarding.places.include?(boarding.driver_checkin_palce_cart_1) %>
	    <div class="alert alert-danger">
	    	<% if !boarding.places.include?(boarding.driver_checkin_palce_horse) %>
	      <p>
					Placa Cavalo não está presente no embarque
	      </p>
	      <% end %>
	    	<% if boarding.places.include?(boarding.driver_checkin_palce_cart_1) %>
	      <p>
					Placa Carreta não está presente no embarque
	      </p>
	      <% end %>
	    </div>
	<% end %>

<% end %>

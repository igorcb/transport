<div class="panel panel-default">
  <div class="panel-heading">Listagem de Fornecedor</div>
  <div class="panel-body">
    <%= link_to 'Novo Fornecedor', new_supplier_path, class: "btn btn-blue btn-lg btn-block" %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Cpf cnpj</th>
            <th>Nome</th>
            <th>Fantasia</th>
            <th colspan="3">Opções</th>
          </tr>
        </thead>

        <tbody>
          <% @suppliers.each do |supplier| %>
            <tr>
              <td><%= supplier.cpf_cnpj %></td>
              <td><%= supplier.nome %></td>
              <td><%= supplier.fantasia %></td>
              <td><%= link_to 'Show', supplier, class: "btn btn-info btn-sm" %></td>
              <td><%= link_to 'Edit', edit_supplier_path(supplier), class: "btn btn-blue btn-sm" %></td>
              <td><%= link_to 'Destroy', supplier, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>    
  </div>
</div>
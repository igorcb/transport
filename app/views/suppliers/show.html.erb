<h2>Atividades</h2>
<% if @supplier.activities.any? %>
  <table class="table table-striped">
    <tbody>
      <% @supplier.activities.each do |activity| %>
        <tr>
          <td><%= link_to activity.descricao, activity if activity.present? %></td>
        </tr>
      <% end %>

    </tbody>

  </table>
<% else %>
  <p>This person has no activity yet.</p>
<% end %>


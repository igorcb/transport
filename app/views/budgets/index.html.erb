<div class="panel panel-default">
  <div class="panel-heading">Listagem de Orçamentos</div>
  <div class="panel-body">
    <%= link_to 'Novo Orçamento', new_budget_path, class: "btn btn-blue btn-lg btn-block" %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Data</th>
            <th>Email</th>
            <th>Nome</th>
            <th>Fone</th>
            <th>Estado origem</th>
            <th>Municipio origem</th>
            <th>Estado destino</th>
            <th>Municipio destino</th>
            <th colspan="3">Opções</th>
          </tr>
        </thead>

        <tbody>
          <% @budgets.each do |budget| %>
            <tr>
              <td><%= budget.data %></td>
              <td><%= budget.email %></td>
              <td><%= budget.nome %></td>
              <td><%= budget.fone %></td>
              <td><%= budget.estado_origem %></td>
              <td><%= budget.municipio_origem %></td>
              <td><%= budget.estado_destino %></td>
              <td><%= budget.municipio_destino %></td>
              <td><%= link_to 'Show', budget, class: "btn btn-info btn-sm" %></td>
              <td><%= link_to 'Edit', edit_budget_path(budget), class: "btn btn-blue btn-sm" %></td>
              <td><%= link_to 'Destroy', budget, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>    
  </div>
</div>

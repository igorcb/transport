<h3>Mídias</h3>
<div id="media" data-toggle="modal-gallery" data-target="#modal-gallery">
  <% object.assets.each do |asset| %>
    <div class="items">
        <% if asset.is_image? %>
          <%= link_to image_tag( asset.asset.url(:thumb)), "#" ,  data: {:toggle=>"modal", :target=> "#myModal"}, title: asset.asset_file_name %>
        <% else %>
          <%= link_to image_tag("image_pdf.png", size: "120x90"), asset.asset.url(:original, false), target: "_blank" %>
        <% end  %>
        <a href="?asset_id=<%= asset.id %>" class="btn btn-danger btn-sm remove" data-confirm="Are you sure?" data-method="delete"><i class="fas fa-times"></i></a>
        <%= label_tag :asset_file_name, asset.asset_file_name %>
    </div>
  <% end %>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Documento: </h4>
      </div>
      <div class="modal-body">
      <!-- Carousel -->

      <div id="well">
        <div id="myCarousel_<%= object.id %>" class="carousel slide">

          <!-- Carousel items -->
          <div class="carousel-inner">


          <% i= 0 %>
          <% object.assets.each do |asset|  %>
            <% if asset.is_image? %>
              <div class="item<%= (i == 0) ? " active" : "" %>">
                  <div class="">
                    <div class="">
                      <!-- <a href="ligue-1212x180-cinza" class="thumbnail"><img src="<%#= asset_path( 'ligue-1212x180-cinza.jpg' ) %>" alt="Oil Barrons" style="max-width:100%;" /></a></div> -->
                      <h4 class="modal-title" id="myModalLabel"> <%= asset.asset_file_name %> </h4>
                        <%= image_tag (asset.asset.url(:original)), alt: "Oil Barrons", style:"max-width:100%; vertical-align: middle;" if object.assets.present? %>
                    </div>
                  </div>
              </div>
            <% end %>
          <% end  %>

          </div><!--/carousel-inner-->

          <a class="left carousel-control" href="#myCarousel_<%= object.id %>" data-slide="prev">‹</a>
          <a class="right carousel-control" href="#myCarousel_<%= object.id %>" data-slide="next">›</a>
        </div><!--/myCarousel-->

      </div><!--/well-->


      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

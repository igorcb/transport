<h2>Veiculos</h2>
<% if object.vehicles.any? %>
  <table class="table table-striped">
     <thead>
      <tr>
        <th>Placa</th>
        <th>Tipo</th>
        <th>Tipo veiculo</th>
        <th>No.Eixo</th>
        <th>Qtde Pallets</th>
        <th>Piso</th>
        <th>Motorista</th>
        <th>Propriet√°rio</th>
      </tr>
    </thead>
    <tbody>
   <% object.vehicles.each do |vehicle| %>
        <tr>
          <td><%= link_to vehicle.place_state, vehicle %></td>
          <td><%= link_to vehicle.tipo_nome, vehicle %></td>
          <td><%= link_to vehicle.tipo_veiculo_nome, vehicle %></td>
          <td align="center"><%= link_to vehicle.numero_eixos, vehicle %></td>
          <td><%= link_to "#{vehicle.qtde_paletes}", vehicle %></td>
          <td><%= link_to vehicle.tipo_piso_assoalho_nome, vehicle %></td>
          <td><%= link_to vehicle.drivers.first.nome, vehicle.drivers.first  if vehicle.drivers.present? %></td>

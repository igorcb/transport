<tr>
  <td><%= task.name %></td>
  <td><%= truncate(task.body, length: 20)  %></td>
  <td><%= task.employee.nome if task.employee.present? %></td>
  <td><%= date_br task.start_date %></td>
  <td><%= date_br task.finish_date %></td>
  <td><%= task.time_first %></td>
  <td><%= task.allocated_and_observation %></td>
  <td><%= task.second_time %></td>
  <td><%= task.status_name %></td>
  <td><%= task.observation %></td>
  <td><%= link_to 'Show', task, class: "btn btn-info btn-sm" %></td>
  <td><%= link_to 'Edit', edit_task_path(task), class: "btn btn-primary btn-sm" %></td>
  <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
</tr>
<div class="panel panel-default">
  <div class="panel-heading">Listagem de Usu√°rios</div>
  <div class="panel-body">
    <%= toggle_active_path(current_user) %><br />
    <%#= toggle_active_users_path(current_user) %><br />
    <%#= link_to 'New Task', new_task_path, class: "btn btn-blue btn-sm btn-block" %>
    <div class="table-responsive">

        <div id="result_tasks">

        <table class="table table-striped">
          <thead>
            <%#= render 'header' %>
              <th>ID</th>
              <th>E-mail</th>
              <th>Nome</th>
              <th>Employee</th>
              <th>Nivel</th>
              <th>Ativo</th>
          </thead>

          <tbody>
            <%#= render @tasks %>
            <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.email %></td>
              <td><%= user.name %></td>
              <td><%= user.employee.id_name if user.employee.present? %></td>
              <td><%= user.roles.first.name if user.roles.present? %></td>
              <td><%= link_to raw("<i class=\"far fa-check-square\"></i>"), toggle_active_path(user) %> <%= user.active %></td> 
            </tr>
            <% end %>
          </tbody>

        </table>
      </div>

    </div>
  </div>
</div>

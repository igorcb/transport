<h1>Paletes da nota <%= @nfe_xml.numero %></h1>
<p>selecione um palete na nota</p>


<table class="table table-bordered table-striped">
<thead>
  <tr>
  <th>Palete</th>
  <th>Endere√ßo</th>
  <th>House</th>
  <th></th>
  </tr>
</thead>
<tbody>
  <% @pallets.each do |pallet| %>
    <% house = pallet.house %>
    <tr>
      <td>
        <%= pallet.number %>
      </td>
      <td>
        <%= house.address if house.present? %>

<%= form_for(@cost_center) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

   <div class="form-group">
    <%= f.label :descricao %><br>
    <%= f.text_field :descricao, class: "form-control"  %>
  </div>
  
  <div class="form-group">
    <%= f.submit "Salvar", class: "btn btn-blue" %>
    <%= link_to "Exibir",  cost_center_path(@cost_center), class: "btn btn-info" if !@cost_center.new_record? %>
    <%= link_to "Listar Todos", cost_centers_path, class: "btn btn-default" %>
  </div>

<% end %>

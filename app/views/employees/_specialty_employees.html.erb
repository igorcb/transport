<div class="row" style="margin-top:5px;">
  <div class="col-xs-3" >
      <%= f.select(:specialty_id, Specialty.order(:descricao).collect {|s| [s.descricao, s.id]}, {include_blank: "Especialidade"}, {class: "form-control input-sm" } ) %>
  </div>

  <div class="col-xs-2">
        <%= f.text_field :valor, class: "form-control input-sm money2", placeholder: "Valor"  %>
  </div>

  <a href="#" class="btn btn-danger btn-sm remove" data-confirm="Are you sure?"><i class="fas fa-times"></i></a>

</div>

<%= f.hidden_field :id %>
<%= f.hidden_field :_destroy %>

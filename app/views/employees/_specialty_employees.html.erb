<fieldset class="item">
  <div class="row">
    <div class="col-xs-2">  
        <%= f.select(:specialty_id, Specialty.order(:descricao).collect {|s| [s.descricao, s.id]}, {include_blank: true}, {class: "form-control input-sm" } ) %>
    </div>

    <div class="col-xs-2">  
          <%= f.text_field :valor, class: "form-control input-sm money2"  %>
    </div>

    <a href="#" class="btn btn-danger btn-sm remove" data-confirm="Are you sure?">[-] Apagar</a>

  </div>

  <%= f.hidden_field :id %>
  <%= f.hidden_field :_destroy %>
</fieldset>

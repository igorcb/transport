<% if @breakdown.errors.any? -%>
  $("#inventories_success").hide(300);
  $("#inventories_errors").html("<%= j(render 'shared/error_messages', object: @breakdown)%>");
  $("#inventories_errors").show(300);
<% else -%>
  $("#inventories_errors").hide(300);
  $("#inventories_success").empty();
  $("#inventories_success").append("<div class='alert alert-success'>Successfully created inventory.</div>");
  $(":input:not(input[type=submit])").val("");
  $("#inventories_success").show(300);
  $("#breakdowns_list").html("<%= j( render "breakdowns", breakdowns: @breakdown ) %>");
<% end -%>

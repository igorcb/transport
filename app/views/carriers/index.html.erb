<div class="panel panel-default">
  <div class="panel-heading">Listagem de Transportadoras</div>
  <div class="panel-body">
    <%= link_to 'Nova Transportadora', new_carrier_path, class: "btn btn-primary btn-lg btn-block" %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Cpf cnpj</th>
            <th>Nome</th>
            <th>Fantasia</th>
            <th>Estado</th>
            <th>Cidade</th>
            <th colspan="3">Opções</th>
          </tr>
        </thead>

        <tbody>
          <% @carriers.each do |carrier| %>
            <tr>
              <td><%= carrier.cnpj %></td>
              <td><%= carrier.nome %></td>
              <td><%= carrier.fantasia %></td>
              <td><%= carrier.estado %></td>
              <td><%= carrier.cidade %></td>
              <td><%= link_to 'Show', carrier, class: "btn btn-info btn-sm" %></td>
              <td><%= link_to 'Edit', edit_carrier_path(carrier), class: "btn btn-primary btn-sm" %></td>
              <td><%= link_to 'Destroy', carrier, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>    
  </div>
</div>

<h2>Contatos</h2>
<% if @carrier.contacts.any? %>
  <table class="table table-striped">
    <thead>
      <th>Tipo</th>
      <th>Nome</th>
      <th>Fone</th>
      <th>Complemento</th>
    </thead>

    <tbody>
      <% @carrier.contacts.each do |contact| %>
        <tr>
          <td><%= contact.tipo_contato %></td>
          <td><%= contact.nome %></td>
          <td><%= contact.fone %></td>
          <td><%= contact.complemento %></td>
      
        </tr>
      <% end %>

    </tbody>

  </table>
<% else %>
  <p>This person has no phones yet.</p>
<% end %>

<div class="form-group">
  <%= link_to 'Editar', edit_carrier_path(@carrier), class: "btn btn-primary" %>
  <%= link_to 'Listar Todos',  carriers_path, class: "btn btn-default" %>
</div>

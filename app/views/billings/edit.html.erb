<h1>Editing Billing</h1>

<%= form_for(@billing) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label :data %>
    <%= f.text_field :data, class: "form-control", disabled: true %>
  </div>
  <div class="form-group">
    <%= f.label :valor %>
    <%= f.text_field :valor, class: "form-control", disabled: true %>
  </div>
  <div class="form-group">
    <%= f.label :data_vencimento %>
    <%= f.text_field :data_vencimento, class: "form-control data", value: date_br(@billing.data_vencimento) %>
  </div>
  <div class="form-group">
    <%= f.label :observacao %>
    <%= f.text_area :observacao, class: "form-control" %>
  </div>

  <h2>Docs.</h2> 
  <div id="documents">
    <div class="items">
      <%= f.nested_fields_for :assets do |f| 
        render 'shared/asset', f: f
      end  -%>
    </div>
      <br /> <a href="#" class="btn btn-success btn-sm add">[+] Documento</a>  
  </div>

  <br />
  <div class="form-group">
    <%= f.submit "Salvar", class: "btn btn-primary" %>
    <%= link_to "Exibir",  billings_path(@billing), class: "btn btn-info" if !@billing.new_record? %>
    <%= link_to "Listar Todos", billings_path, class: "btn btn-default" %>
  </div>
<% end %>

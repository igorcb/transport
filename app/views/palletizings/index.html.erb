<h1>Paletização</h1>
<%= link_to "Nova paletização", select_input_control_palletizings_path,  class: "btn btn-primary" %>

<ul id="result_input" class="list-group dashlist">
  <% @palletizings.each do |palletizing| %>
    <%= render 'list', palletizing: palletizing %>
  <% end %>
</ul>


<script>
  $(".more .content-more").hide()
  $(document).on("click", ".more .show-more", function(){
    $(this).parents(".more").find(".content-more").show(400)
    $(this).hide()
    return false
  })

  $(document).on("click", ".more .hide-more", function(){
    $(this).parents(".more").find(".content-more").hide(400)
    $(this).parents(".more").find(".show-more").show()
    return false
  })
</script>

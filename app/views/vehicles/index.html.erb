<div class="panel panel-default">
  <div class="panel-heading">Listagem de Veículos</div>
  <div class="panel-body">
    <%= link_to 'Novo Veículos', new_vehicle_path, class: "btn btn-primary btn-lg btn-block" %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Tipo veiculo</th>
            <th>Renavan</th>
            <th>Chassi</th>
            <th>Placa</th>
            <th colspan="3">Opções</th>
          </tr>
        </thead>

        <tbody>
          <% @vehicles.each do |vehicle| %>
            <tr>
              <td><%= vehicle.marca %></td>
              <td><%= vehicle.modelo %></td>
              <td><%= vehicle.tipo_veiculo_nome %></td>
              <td><%= vehicle.renavan %></td>
              <td><%= vehicle.chassi %></td>
              <td><%= vehicle.placa %></td>
              <td><%= link_to 'Show', vehicle, class: "btn btn-info btn-sm" %></td>
              <td><%= link_to 'Edit', edit_vehicle_path(vehicle), class: "btn btn-primary btn-sm" %></td>
              <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>    
  </div>
</div>